<p id="notice"><%= notice %></p>

<div class="add-school"><%= link_to 'Add School', new_result_path, class: "btn" %></div>

<div class="header"><h2>Matric Results Report</h2></div>

<div id="chart-container"><%= @chart.render() %></div>

<div class="error">
  <% if @results.blank? %>
   <h4>There are no schools containing the term or center number <%= params[:search] %>.</h4>
  <% end %>
</div>

<br>
<br>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Centre no</th>
      <th>Name</th>
      <th>Wrote 2014</th>
      <th>Passed 2014</th>
      <th>Wrote 2015</th>
      <th>Passed 2015</th>
      <th>Wrote 2016</th>
      <th>Passed 2016</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.centre_no %></td>
        <td class="name"><%= result.name %></td>
        <td><%= result.wrote_2014 %></td>
        <td><%= result.passed_2014 %></td>
        <td><%= result.wrote_2015 %></td>
        <td><%= result.passed_2015 %></td>
        <td><%= result.wrote_2016 %></td>
        <td><%= result.passed_2016 %></td>
        <td><%= link_to 'View', result %></td>
        <td><%= link_to 'Update', edit_result_path(result) %></td>
        <td><%= link_to 'Delete', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


